package day03;

import java.util.Scanner;
public class Ex05 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		System.out.println("숫자 입력 ");
		int num = scan.nextInt();
		
		if (num == 0)
			System.out.println(" 0 ");
		else if (num > 0)
			System.out.println(" 양수 ");
		else if (num < 0)
			System.out.println(" 음수 ");

	}

}
