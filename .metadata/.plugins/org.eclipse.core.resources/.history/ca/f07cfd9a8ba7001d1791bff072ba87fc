		System.out.println("첫번째 숫자를 입력하세요 : ");
		int num1 = scan.nextInt();
		System.out.println("두번째 숫자를 입력하세요");
		int num2 = scan.nextInt();
		System.out.println("+num1+" + "+num2+" = "+(num1+num2));
		System.out.println("+num1+" - "+num2+" = "+(num1-num2));
		System.out.println("+num1+" * "+num2+" = "+(num1*num2));
		System.out.println("+num1+" / "+num2+" = "+(num1/num2));
		 //문자열 숫자열 구분
		
	}

}
