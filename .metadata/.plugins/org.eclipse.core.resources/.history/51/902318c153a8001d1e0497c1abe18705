package operator03;

public class Operator07 {

	public static void main(String[] args) {
		int x, y, z;
		int absX, absY, absZ;
		int signX, signY, signZ
		x= 40;
		y=-9;
		z=0;
		absX = x > 0 ? "+":"-";
		System.out.println(absX);
		absY = y >= 0 ? y:-y;
		System.out.println(absY);
		absZ = y >= 0 ? z:-z;
		System.out.println(absZ);
		

	}

}
