package day04;

import java.util.Scanner;

public class For02 {

	public static void main(String[] args) {
//		1.안녕하세요
//		3.안녕하세요
//		5.안녕하세요
//		...
		int num = 1;
		for (int i=1; i<=100; i++) {//i+=2 , i=i+2 동일한 명령.
			System.out.printf("%03d. 안녕하세요\n",num);
			num+=2;
//		for (int i=1; i<=100; i++) 
//			System.out.println(num+". 안녕하세요");
//			num+=2;			
		}
		System.out.println("----------------");
		
		for (int i=50; i>=1; i--);
		System.out.println("%03d. 안녕하세요\n".num);
	}

}
